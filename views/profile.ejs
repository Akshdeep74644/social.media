<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
  </head>
  <body class="bg-gray-900">
    
<div class="w-full p-10  h-full text-[#dedede]  bg-gray-900 ">
  <div class="w-full flex justify-between items-center">
    <h1 class="text-2xl">Hello, <%= user.username %> üëãüèº </h1>
    <div>
      <a href="/feed" class="p-2 rounded-lg mr-5 bg-blue-800">Feed</a>
      <a href="/logout" class="p-2 rounded-lg bg-red-800">Logout</a>
    </div>
  </div>

  <div class="mt-[5%]">
    <form action="/post" class="flex flex-col gap-5" method="post">
      <h1 class="text-{#dedede} text-4xl">Write your thought</h1>
      <textarea name="content"  class="resize-none outline-none w-[60%] h-25 border-2 border-zinc-400 rounded-2xl p-2" placeholder="type..."></textarea>
      <button type="submit" class="text-white w-[10%] bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Post it</button>
    
    </form>
    <div class="all_post mt-10 w-full">
      <h1 class="text-4xl">Your post</h1>
      
      <div class="post_container flex flex-wrap justify-start items-center gap-5 mt-5">
        <% user.posts.reverse().forEach((post)=>{ %>
          <div class="post border-1 flex flex-col gap-3 bg-zinc-800 rounded-2xl border-zinc-600 w-[49%] p-5">
          <div class="flex justify-between">
          <h1 class="text-xl text-blue-600">By<%= user.username%></h1>
            <div>
              <a href="/edit/<%= post._id %>" class="text-zinc-500 mr-2">Edit</a>
              <a href="/delete/<%= post._id %>" class="text-red-500">Delete</a>
            </div>
          </div>
          <p><%= post.content%></p>
          <div class="flex gap-5">
            <div class="flex gap-5">
              <div>
                <a href="/like/profile/<%= post._id %>"  class="text-blue-500">Like</a>
                <span><%= post.like.length %></span>
              </div>
            </div>
        
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
  </body>
</html>